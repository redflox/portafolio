---
import Navbar from "../components/Navbar.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="h-full min-h-screen relative">
	<div class="absolute gradient w-screen h-screen -z-10"></div>
    <header>
      <Navbar />
    </header>
    <main class="flex flex-col w-full">
      <slot />
    </main>
    <footer></footer>
  </body><style is:global>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --accent: 136, 58, 234;
      --tw-shadow-color: #000;
    }
    body {
      width: 100%;
      height: 100vh;
    }

    .gradient::before {
      content: "";
	  position: absolute;
	  width: 100%;
      height: 100%;
      top: -25%;
	  z-index: -1;
      background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
      -webkit-mask-image: radial-gradient(rgba(0, 0, 0, 0.45), transparent 70%);
      mask-image: radial-gradient(rgba(0, 0, 0, 0.45), transparent 70%);
    }

    html {
      background-color: #000;
      font-family: system-ui, sans-serif;
      color: white;
    }
    .black-text-shadow {
      text-shadow: 0px 1px 5px black;
    }
  </style>
</html>
