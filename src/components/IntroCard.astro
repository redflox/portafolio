---
import { Image } from "astro:assets";
import LocalMe1Image from "../icons/me1.webp";
import LocalBackgroundImage from "../icons/introCardBackground.webp";
import LocalJavaImage from "../icons/java.svg";
import LocalPythonImage from "../icons/python.svg";
import LocalLinuxImage from "../icons/linux.svg";
import LocalJavascriptImage from "../icons/javascript.svg";
// interface Props {
// title: string;
// body: string;
// href: string;
// }

// const { href, title, body } = Astro.props;
---

<a
	class="contenedor shadow-lg rounded-lg relative col-span-3 sm:col-span-3 aspect-[3/2] row-span-2 overflow-hidden"
	href="/curriculum-vitae"
>
	<Image class="background" src={LocalBackgroundImage} alt="Background" />
	<div class="h-full w-full flex flex-col justify-center z-10">
		<div class="w-full h-full flex flex-row justify-center gap-4 md:gap-12">
			<div class="avatar flex flex-col justify-center">
				<div
					class="w-24 h-24 md:w-48 md:h-48 lg:h-60 lg:w-60 xl:w-72xl:h-72 rounded-full"
					transition:name="introcard image"
				>
					<Image src={LocalMe1Image} alt="me" />
				</div>
			</div>

			<div class="flex flex-col justify-center">
				<div
					class="flex justify-start font-bold text-lg md:text-4xl lg:text-6xl mb-2 text-white black-text-shadow"
					transition:name="introcard name"
				>
					Bryan Mu√±oz
				</div>
				<p
					class="text-md md:text-lg lg:text-xl flex justify-start text-white black-text-shadow"
					transition:name="introcard description"
				>
					Systems Engineer <br />Developer
				</p>
			</div>
		</div>
		<div class="px-6 py-4 flex flex-col align-middle z-10">
			<div
				class="flex flex-row justify-center"
				transition:name="introcard tecnologies"
			>
				<span
					class="w-10 h-10 p-2 md:w-14 md:h-14 transition duration-500 hover:scale-150"
				>
					<Image src={LocalJavaImage} alt="Logo Java" />
				</span>
				<span
					class="w-10 h-10 p-2 md:w-14 md:h-14 transition duration-500 hover:scale-150"
				>
					<Image src={LocalPythonImage} alt="Logo Python" />
				</span>
				<span
					class="w-10 h-10 p-2 md:w-14 md:h-14 transition duration-500 hover:scale-150"
				>
					<Image src={LocalJavascriptImage} alt="Logo JavaScript" />
				</span>
				<span
					class="w-10 h-10 p-2 md:w-14 md:h-14 transition duration-500 hover:scale-150"
				>
					<Image src={LocalLinuxImage} alt="Logo Linux" />
				</span>
			</div>
		</div>
	</div>
</a>

<style>
	.background {
		background-color: white;
		opacity: 0.9;
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		overflow: hidden;
		height: 100%;
		z-index: 0;
		transition: opacity 0.5s ease-in-out;
	}

	.contenedor:hover .background {
		opacity: 1;
	}
	.contenedor:hover {
		cursor: pointer;
	}
</style>
